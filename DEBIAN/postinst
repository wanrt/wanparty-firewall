#!/bin/sh
 

set -e

case "$1" in
    configure)
    DEPARTEMENT=$(cat /etc/departement) 
    
    cp -vrf /usr/share/wanparty/etc/shorewall/* /etc/shorewall/
     sed -i -e "s/DEPARTEMENT/$DEPARTEMENT/g" /etc/shorewall/params
    sed -i -e "s/startup=0/startup=1/g" /etc/default/shorewall
    touch /var/log/wanparty/firewall.log
    systemctl start rsyslog

    systemctl enable shorewall 
    systemctl restart shorewall 

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
